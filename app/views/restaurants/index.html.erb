<div class="container">
  <div class="d-flex justify-content-between align-items-center mt-3">
    <h1>Restaurants</h1>
    <%= link_to new_restaurant_path do %>
      <i class="fas fa-plus-square btn-light"></i>
    <% end %>
  </div>

  <div class="cards">
    <% @restaurants.each do |restaurant| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(http://source.unsplash.com/featured/?<%= restaurant.category %>&<%= rand(1000) %>)">
        <%= restaurant.name %>
        <%= link_to "", restaurant_path(restaurant), class: "card-category-link"  %>
      </div>
    <% end %>
  </div>
</div>
